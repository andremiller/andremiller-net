---
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
const { pageTitle } = Astro.props;
---

<html lang="en">
	<head>
		<!-- Google tag (gtag.js) -->
		<script async src="https://www.googletagmanager.com/gtag/js?id=G-MRKPGBEWYJ"></script>
		<script>
		window.dataLayer = window.dataLayer || [];
		function gtag(){dataLayer.push(arguments);}
		gtag('js', new Date());

		gtag('config', 'G-MRKPGBEWYJ');
		</script>
		<meta charset="utf-8" />
		<link rel="icon" type="image/png" href="/favicon.png" />
		<link rel="sitemap" href="/sitemap-index.xml" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<title>{pageTitle} | andremiller.net</title>
	</head>
	<body class="bg-gray-50 dark:bg-gray-900 text-gray-900 dark:text-gray-100 transition-colors">
        <Navigation />
		<main class="max-w-6xl mx-auto px-6 py-12">
			<h1 class="text-5xl font-bold text-center mb-6">{pageTitle}</h1>
        <slot />
		</main>
		<Footer />
	</body>
</html>
